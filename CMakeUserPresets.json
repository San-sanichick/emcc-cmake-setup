{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 22,
        "patch": 1
    },
    "configurePresets": [
        {
            "name": "default",
            "displayName": "Emscripten",
            "binaryDir": "${sourceDir}/target/wasm",
            "toolchainFile": "${sourceDir}/vendors/emsdk/upstream/emscripten/cmake/Modules/Platform/Emscripten.cmake"
        },
        {
            "name": "native",
            "displayName": "Native",
            "binaryDir": "${sourceDir}/target/native"
        }
    ],
    "buildPresets": [
        {
            "name": "Debug",
            "configurePreset": "default",
            "configuration": "Debug"
        },
        {
            "name": "Release",
            "configurePreset": "default",
            "configuration": "Release"
        }
    ]
}